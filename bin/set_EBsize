#!/bin/sh

set -u

DAQ_USER="daq"

if [[ `whoami` != "$DAQ_USER" ]]
then
    echo "Run as '$DAQ_USER' user"
    exit 1
fi

while true; do
    printf "Have you set all MPVs to 'Write OK'? (y/n): "
    read _answer
    case ${_answer} in
        y)
            break
            ;;
    esac
done

current=$(cd $(dirname $0);pwd)
cd $current/../babilib

poetry run python3 src/set_EBsize.py $1

cd -
